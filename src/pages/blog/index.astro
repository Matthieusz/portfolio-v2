---
import Hashtag from "@/icons/Hashtag.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("posts")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
---

<MainLayout>
  <div class="flex items-center justify-center">
    <div>
      <h1
        class="mt-12 mb-4 flex items-center gap-2 text-3xl font-bold md:text-4xl"
      >
        <Hashtag /> Posts
      </h1>
      <p class="text-muted-foreground mb-8 max-w-2xl">
        Notes, experiments, and write-ups on web development, programming, and
        technology.
      </p>

      <div class="grid gap-4 md:grid-cols-2">
        {
          posts.length === 0 ? (
            <p class="text-muted-foreground">No posts published yet.</p>
          ) : (
            posts.map((post) => (
              <article class="flex h-full flex-col overflow-hidden rounded-lg p-4">
                <div class="text-muted-foreground flex flex-col gap-2 text-xs">
                  <h2 class="mt-3 text-2xl font-semibold">
                    <a
                      href={`/blog/${post.slug}`}
                      class="hover:text-primary transition-colors"
                    >
                      {post.data.title}
                    </a>
                  </h2>
                  <time datetime={post.data.date.toISOString()}>
                    {post.data.date.toLocaleDateString()}
                  </time>
                  <div class="flex flex-wrap items-center gap-1">
                    {post.data.tags.map((tag) => (
                      <span class="bg-secondary text-secondary-foreground rounded-lg px-2 py-0.5 text-[0.65rem]">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              </article>
            ))
          )
        }
      </div>
    </div>
  </div>
</MainLayout>
